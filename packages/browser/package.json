{
  "name": "@metal0/lanceql",
  "version": "0.2.0",
  "type": "module",
  "description": "localStorage that scales - OPFS-backed storage with query and smart search for the browser",
  "main": "dist/lanceql.js",
  "module": "dist/lanceql.esm.js",
  "types": "dist/lanceql.d.ts",
  "exports": {
    ".": {
      "import": "./dist/lanceql.esm.js",
      "require": "./dist/lanceql.js",
      "types": "./dist/lanceql.d.ts"
    },
    "./wasm": "./dist/lanceql.wasm"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "npm run build:wasm && npm run build:js && npm run sync:examples",
    "build:wasm": "cd ../.. && zig build wasm && cp zig-out/bin/lanceql.wasm packages/browser/dist/",
    "build:js": "node esbuild.config.js",
    "sync:examples": "cp dist/lanceql.wasm ../../examples/wasm/ && cp dist/lanceql-worker.js ../../examples/wasm/ && cp dist/lanceql.esm.js ../../examples/wasm/lanceql.js",
    "build:legacy": "node scripts/build.js",
    "dev": "node esbuild.config.js --watch",
    "test": "npx playwright test",
    "test:e2e": "npx playwright test",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "localStorage",
    "opfs",
    "storage",
    "persistence",
    "browser",
    "wasm",
    "vector-search",
    "semantic-search",
    "react",
    "svelte",
    "vue",
    "query",
    "filter"
  ],
  "author": "LanceQL Contributors",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/teamchong/lanceql.git",
    "directory": "packages/browser"
  },
  "homepage": "https://github.com/teamchong/lanceql#readme",
  "bugs": {
    "url": "https://github.com/teamchong/lanceql/issues"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.57.0",
    "esbuild": "^0.27.2"
  }
}